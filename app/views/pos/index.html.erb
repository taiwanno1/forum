<div class="page-header">
  <h1 class="text-center">H.H.Forum</h1>
</div>

<h2>Post List</h2>
<%= link_to "sort by default", pos_path(:order => "id"), :class => "btn btn-info" %>
<%= link_to "sort by reply time", pos_path(:order => "updated_at"), :class => "btn btn-primary" %>
<%#= sort_link(@q, :id) %>
<%= link_to "sort by comments count", pos_path(:order => "comments_count"), :class => "btn btn-warning" %>

<br/>

<table class="table table-striped table-border">
<!-- 文章分類 -->
  <% @cats.each do |c| %>
    <%= link_to c.name, pos_path(:cat_id => c), :class => "btn btn-default" %>
  <%end%>

  <thead class="thead">
    <%= paginate @pos %>
    <tr>
      <th>Topic </th>
      <th>User</th>
      <th>Po Created Time</th>
      <th>Latest Comment Time</th>
      <th>Comments Count</th>
    </tr>
  </thead>
  <tbody>
  <!-- 文章 -->
    <% @pos.each do |p| %>
      <tr>
        <th>
          <%= check_box_tag "ids[]", p.id, false %>
          <%= link_to p.title, po_comments_path(p), :class => "btn btn-info" %>
        </th>
        <th><%= link_to p.user.try(:short_name), user_path(p.user) %></th>
        <th><%= p.created_at.strftime('%c') %></th>
        <th><%= p.updated_at.strftime('%c') %></th>
        <th><%= p.comments.count %></th>
        <th class="clearfix">
          <%= link_to "Edit", pos_path( :po_id => p, :page => params[:page]), :class => "btn btn-info" if p.user == current_user %>
          <%= link_to "Delete", po_path( p,:po_id => p, :page => params[:page]), :method => :delete, :class => "btn btn-danger pull-right" if p.user == current_user%>
        </th>
      </tr>
    <%end%>
  </tbody>
</table>

<h2>wanna post?</h2>
<%= form_for @po do |f| %>
<%= render :partial => "form", :locals => {:f => f} %>
<%= f.submit "save", :class => "btn btn-primary" %>
<%end%>

