<tr id="po-<%= p.id %>">
    <td>
      <%= check_box_tag "ids[]", p.id, false %>
      <%= link_to p.title, po_comments_path(p), :class => "btn btn-info" %>`
    </td>
    <td><%= link_to p.user.try(:short_name), user_profiles_path(p.user) %></td>
    <td><%= p.created_at.strftime('%c') %></td>
    <td><%= p.updated_at.strftime('%c') %></td>
    <td><%= p.comments.count %></td>

    <td class="clearfix">
      <% if current_user && p.user == current_user %>

        <%= link_to "Edit", pos_path( :po_id => p, :page => params[:page]), :class => "btn btn-info" if p.user == current_user %>

        <%= link_to "Delete", po_path( p,:po_id => p, :page => params[:page]), :method => :delete, :remote => true, :class => "btn btn-danger pull-right" %>

      <% end %>
    </td>
</tr>
