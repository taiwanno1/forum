<% if @po.errors.any? %>
      <ul>
        <% @po.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
<% end %>

<div class="form-group" id="dropdown">
  <%= f.collection_select :cat_ids, Cat.all, :id, :name, {}, :class => "form-control", :prompt => "Please select" %>
</div>

<div class="form-group">
  <%= f.file_field :logo %>

  <% if @po.logo.exists? %>
    <%= check_box_tag "remove_logo", "1" %> Remove Logo
  <% end %>
</div>

<div class="form-group">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :article, "Article" %>
  <%= f.text_area :article, :class => "form-control" %>
</div>

<script>
  $( "#dropdown" ).select2({
    theme: "bootstrap"
});
</script>

